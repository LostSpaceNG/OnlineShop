@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2 class="text-center my-4">Checkout</h2>

<form asp-action="Checkout" method="post" class="d-flex flex-column align-items-center">
    <div class="mb-3 form-group-custom">
        <label class="mb-1">Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group-custom">
        <label class="mb-1">Shipping Address</label>
        <input asp-for="ShippingAddress" class="form-control" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group-custom">
        <label class="mb-1">City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group-custom">
        <label class="mb-1">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" />
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group-custom">
        <label class="mb-1">Country</label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group-custom">
        <label class="mb-1">Payment Method</label>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="Card">Card</option>
            <option value="PayPal">PayPal</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success my-4">Place Order</button>
    
</form>