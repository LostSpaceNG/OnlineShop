@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center my-4">Register</h2>

<form asp-action="Register" method="post" class="d-flex flex-column align-items-center">
    <div class="mb-3 form-group-custom">
        <label class="mb-1">Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group-custom">
        <label class="mb-1">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group-custom">
        <label class="mb-1">Password</label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3 form-group-custom">
        <label class="mb-1">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <!-- Display ModelOnly Errors -->
    <div asp-validation-summary="ModelOnly" class="text-danger text-center error-summary"></div>

    <button type="submit" class="btn btn-primary my-3">Register</button>
</form>

<div class="text-center">
    <a asp-action="Login">Already have an account? Login here</a>
</div>