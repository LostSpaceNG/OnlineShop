@model IEnumerable<Category>

<h2>Categories</h2>
<a class="btn btn-primary" asp-route="admin/categories" asp-action="create">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-warning" asp-route="admin/categories" asp-action="edit" asp-route-id="@category.Id">Edit</a>
                    <a class="btn btn-danger" asp-route="admin/categories" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>