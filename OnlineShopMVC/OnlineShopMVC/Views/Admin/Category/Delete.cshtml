@model Category

@{
    ViewData["Title"] = "Admin";
}

<h2 class="my-4">Are you sure you want to delete this category - "@Model.Name"?</h2>

<form method="post" action="/admin/categories/delete/@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/admin/categories" class="btn btn-secondary">Cancel</a>
</form>