@model Order

@{
    ViewData["Title"] = "Confirmation";
}

<h2 class="my-4 text-sm-start text-center">Order Confirmation</h2>

<p class="lead text-sm-start text-center">Thank you for your purchase! Your order number is <strong>@Model.Id</strong>.</p>
<p class="my-1 text-sm-start text-center">Order Date: @Model.OrderDate.ToString("g")</p>
<p class="my-1 text-sm-start text-center">Total Amount: @Model.TotalAmount.ToString("C")</p>
<p class="my-1 text-sm-start text-center">Payment Method: @Model.Payment?.PaymentMethod</p>

<h3 class="mt-5 text-sm-start text-center">Order Details</h3>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@((item.Quantity * item.Price).ToString("C"))</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-sm-start text-center my-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
</div>