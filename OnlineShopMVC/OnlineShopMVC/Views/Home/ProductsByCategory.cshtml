@model IEnumerable<Product>

@{
    ViewData["Title"] = ViewBag.CategoryName;
}

<h1 class="text-center">Products in @ViewBag.CategoryName</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted">@product.Description</p>
                    <p class="card-text fw-bold">Price: $@product.Price</p>
                    <a asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
    
</div>