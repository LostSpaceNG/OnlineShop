@model Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
    </div>

    <div class="col-md-6">
        <h1>@Model.Name</h1>
        <p>@Model.Description</p>
        <p class="fw-bold">Price: $@Model.Price</p>
        <a href="#" class="btn btn-success">Add To Cart</a>
    </div>
</div>