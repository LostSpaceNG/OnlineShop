@model Product

@{
    ViewData["Title"] = "Admin";
}

<h2 class="my-4">Are you sure you want to delete this product?</h2>

<p class="my-2"><strong>Name:</strong> @Model.Name</p>
<p class="my-2"><strong>Price:</strong> @Model.Price.ToString("C")</p>
<p class="my-2"><strong>Category:</strong> @Model.Category?.Name</p>

<form method="post" action="/admin/products/delete/@Model.Id" class="mt-4">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/admin/products" class="btn btn-secondary">Cancel</a>
</form>