@model ProductAdminViewModel

@{
    ViewData["Title"] = "Admin";
}

<h2 class="my-4">Edit Product</h2>

<form method="post" action="/admin/products/edit/@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label class="mb-1">Name</label>
        <input asp-for="Name" type="text" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="mb-1">Description</label>
        <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="mb-1">Price</label>
        <input asp-for="PriceInput" type="text" class="form-control" placeholder="19,99" value="@Model.PriceInput" />
        <span asp-validation-for="PriceInput" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="mb-1">Stock Quantity</label>
        <input asp-for="StockQuantity" type="number" class="form-control" min="0" value="@Model.StockQuantity" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="mb-1">Image Url</label>
        <input asp-for="ImageUrl" type="text" class="form-control" value="@Model.ImageUrl" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="mb-1">Category</label>
        <select name="CategoryId" class="form-control">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id" selected="@(category.Id == Model.CategoryId ? "selected" : null)">
                    @category.Name
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a href="/admin/products" class="btn btn-secondary">Back</a>
</form>